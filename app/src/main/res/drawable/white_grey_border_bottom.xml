<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1dp">
    <!--create a border on bottom
     Warning: while using margin the - values which shifts the value outside screen will be inside the
        screen so use grey_border_bottom.xml when using margin in layout
    -->
    <item
        android:bottom="1dp"
        android:top="-1dp"
        android:right="-1dp"
        android:left="-1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey" />
            <solid android:color="@color/white" />


        </shape>

    </item>
</layer-list>